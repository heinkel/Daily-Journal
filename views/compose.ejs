<%- include('partials/header'); -%>
<h1>Compose</h1>

<!-- action "name" is same for app.post("name", function)  and method post-->
<form class="" action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <!-- Here below goes input for title using bootstrap elements -->
        <div class="input-group mb-3">
            <input type="text" class="form-control"  name="postTitle" autocomplete="off" 
            placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <!-- we access the data here using req.body."name of input" in this case postTitle -->
        <label>Post</label>
        <!--  below goes multiline input -->
        <div class="input-group">
            <textarea class="form-control" rows="5" cols="80" aria-label="With textarea"></textarea>
        </div>

        <!-- button should be blue bootstrap component -->
    </div>
        <button type="submit" class="btn btn-primary " name="button">Publish</button>
   
</form>

<%- include('partials/footer'); -%>